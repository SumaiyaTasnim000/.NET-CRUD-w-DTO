﻿
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<form method="post">
    <input type="hidden" name="ProductId" value="@Model.ProductId" />
    <label for="Name">Name</label>
    <input type="text" name="Name" value="@Model.Name" label="Name" class="form-control" placeholder="Name" />

    <label for="Description">Description</label>
    <input type="text" name="Description" value="@Model.Description" class="form-control" placeholder="Description" />

    <label for="Price">Price</label>
    <input type="text" name="Price" value="@Model.Price" class="form-control" placeholder="Price" />

    <label for="StockQuantity">StockQuantity</label>
    <input type="text" name="StockQuantity" value="@Model.StockQuantity" class="form-control" placeholder="StockQuantity" />

    <label for="Category">Category</label>
    <input type="text" name="Category" value="@Model.Category" class="form-control" placeholder="Category" />


    <input type="submit" value="Update" class="btn btn-success" />
</form>

